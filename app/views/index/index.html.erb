<h1>truffe#index</h1>

<div id="gallery">
  <div id="slides">
    <div class="slide a"></div>
    <div class="slide b"></div>
    <div class="slide c"></div>
    <div class="slide d"></div>
  </div>
  <ul id="menu">
    <li class="menuitem"></li>
    <li class="menuitem"></li>
    <li class="menuitem"></li>
    <li class="menuitem"></li>
  </ul>
  <h1 class="title show">truffe#index</h1>
</div>

<div id="records">
  <% unless @discographies.blank? %>
    <% @discographies.each do |disc| %>
      <% if disc.updated_at && disc.updated_at >= Date.today.advance(:months => -1) %>
        <h2>New Album</h2>
      <% else %>
        <h2>Now on Sale</h2>
      <% end %>
      <div>発売日:<%= disc.release_date %></div>
      <% if disc.album_name && disc.artist %>
        <% if disc.shop_url %>
          <div><%= link_to disc.album_name + ' / ' + disc.artist, disc.shop_url, :target => '_blank' %></div>
        <% else %>
          <div><%= disc.album_name %>/<%= disc.artist %></div>
        <% end %>
      <% end %>
      <% if disc.players %>
        <div>players:<%= disc.players %></div>
      <% end %>
      <% if disc.record_co %>
        <div>record_company:<%= disc.record_co %></div>
      <% end %>
      <% if disc.presentation %>
        <div>comments:<%= disc.presentation %></div>
      <% end %>
      <% if disc.shop_url %>
        <div><%= link_to image_tag('discographies/disc_' + disc.id.to_s + '.jpg', :size => '140x140'), disc.shop_url, :target => '_blank' %></div>
      <% else %>
        <div><%= image_tag('discographies/disc_' + disc.id.to_s + '.jpg', :size => '140x140') %></div>
      <% end %>
      <br>
    <% end %>
  <% end %>
</div>

<div id="news">
  <h2>News</h2>
  <ul>
    <li><p>2012.08.08</p><p>Webサイトがオープンしました。</p></li>
  </ul>
</div>
