<div id="signin">
  <%= form_for(:session, :url => sessions_path) do |f| %>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit t('signin.submit') %>
    </div>
  <% end %>
  
  <p><%= t('signin.new_user') %><%= link_to t('signin.go_to_signup'), signup_path %></p>
</div>
