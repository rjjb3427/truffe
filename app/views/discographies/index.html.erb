<div id="release">
  <h2>New Release</h2>
  
  <% unless @discographies.blank? %>
    <ul id="discographies_list">
    <% @discographies.each do |disc| %>
      <li>
        <div class="disc_image">
          <% if disc.url %>
            <%= link_to image_tag('discographies/disc_' + disc.id.to_s + '.jpg', :size => '180x180'), disc.url, :target => '_blank' %>
          <% else %>
            <%= image_tag('discographies/disc_' + disc.id.to_s + '.jpg', :size => '180x180') %>
          <% end %>
        </div>
        <div class="disc_detail">
          <% if disc.title && disc.artist %>
            <div class="title">
              <% if disc.url %>
                <%= link_to disc.title + ' / ' + disc.artist, disc.url, :target => '_blank' %>
              <% else %>
                <%= disc.title %> / <%= disc.artist %>
              <% end %>
            </div>
          <% end %>
          <% if disc.updated_at && disc.updated_at >= Date.today.advance(:months => -1) %>
            <div class="new">new</div>
          <% end %>
          <div class="release_date">発売日:<%= disc.release_date %></div>
          <% if disc.players %>
            <div class="players">players:<%= disc.players %></div>
          <% end %>
          <% if disc.record_co %>
            <div class="record_co">record_company:<%= disc.record_co %></div>
          <% end %>
          <% if disc.comment %>
            <div class="comments">comments:<%= disc.comment %></div>
          <% end %>
        </div>
      </li>
    <% end %>
    </ul>
  <% else %>
    <div id="no_discs"><div id="doe"></div>現在リリース情報はありません。<div id="flowers"></div></div>
  <% end %>
</div>
